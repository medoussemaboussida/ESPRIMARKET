		<div  id="product-lists" class="row product-lists">
    {% for produit in produits %}
	
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 product-box text-center">
            <div class="single-product-item">
                <div class="product-image">
                <img src="{{ asset('images/' ~ produit.imageproduit) }}" alt=""></a>
                </div>
                <h3>{{ produit.nomproduit }}</h3>
                <p class="product-price"><span>Stock :{{ produit.quantite }}</span> {{ produit.prix |number_format(3, '.', ' ')}}DT </p>
        <p>
    {{ prixEnEuros[produit.idproduit] | number_format(3, '.', ' ')}} EUR
    &nbsp;|&nbsp;
    {{ prixEnDollars[produit.idproduit] | number_format(3, '.', ' ')}} $
    &nbsp;|&nbsp;
    {{ prixEnYuan[produit.idproduit] | number_format(3, '.', ' ')}} ¥
</p>
{% if produit.offre is null %}
						{# Si le produit n'a pas d'offre #}
						<p>Aucune offre disponible</p>
					{% else %}
						{# Si le produit a une offre #}
						<p class="product-offre">
							<span>Offre: {{ produit.offre.nomOffre }}</span>
							Réduction: {{ produit.offre.reduction }}% <br>
							Montant final: {{ (produit.prix - (produit.prix * produit.offre.reduction / 100)) | number_format(3, '.', ' ') }} DT
						</p>
					{% endif %}
					<div class="product-rating">
						{% if produit.rating is defined %}
						{% for i in range(1, 5) %}
							<!-- Render filled stars for the current rating -->
							<i class="{% if i <= produit.rating %}fas fa-star{% else %}far fa-star{% endif %}"></i>
						{% endfor %}
						{% else %}
							<p>No ratings available</p>
						{% endif %}
					</div>
					<div class="product-interactions">
					<!-- Like and Dislike buttons with JavaScript events -->
					<button class="like-btn" id="like-btn-{{ produit.idproduit }}" onclick="likeProduct({{ produit.idproduit }})">
						<i class="fas fa-thumbs-up"></i> Like
					</button>
					<button class="dislike-btn" id="dislike-btn-{{ produit.idproduit }}" onclick="dislikeProduct({{ produit.idproduit }})">
						<i class="fas fa-thumbs-down"></i> Dislike
