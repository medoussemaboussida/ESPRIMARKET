							<script>
						// Function to handle "like" action for a product
						function likeProduct(productId) {
							// Send POST request to the backend endpoint for liking the product
							fetch(`/produit/like/${productId}`, {
								method: 'POST'
							})
							.then(response => {
								if (response.ok) {
									// If the request was successful, update the UI or show a message
									document.getElementById(`like-btn-${productId}`).classList.add('active');
									alert('Product liked successfully');
								} else {
									// If there was an error, handle it
									alert('Error liking product');
								}
							})
							.catch(error => {
								// Handle network errors
								console.error('Error:', error);
								alert('An error occurred while liking the product.');
							});
						}

						// Function to handle "dislike" action for a product
						function dislikeProduct(productId) {
							// Send POST request to the backend endpoint for disliking the product
							fetch(`/produit/dislike/${productId}`, {
								method: 'POST'
							})
							.then(response => {
								if (response.ok) {
									// If the request was successful, update the UI or show a message
									document.getElementById(`dislike-btn-${productId}`).classList.add('active');
									alert('Product disliked successfully');
								} else {
									// If there was an error, handle it
									alert('Error disliking product');
								}
							})
							.catch(error => {
								// Handle network errors
								console.error('Error:', error);
								alert('An error occurred while disliking the product.');
							});
						}
						</script>
