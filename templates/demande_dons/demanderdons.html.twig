                            <h3><a href="single-news.html">{{ demande.getContenu() }}</a></h3>
                            <p class="blog-meta">
                                <span class="author"><i class="fas fa-user"></i> {{ demande.getNomuser() }} {{ demande.getPrenomuser() }}</span>
                                <span class="date"><i class="fas fa-calendar"></i>{{ demande.getDatePublication()|date('Y-m-d H:i:s') }}</span>
                            </p>
                            <p class="excerpt">Points gagnés: {{ demande.getNbpoints() }}</p>
                            <p>Objectif Points : {{ demande.objectifPoints }}</p>
                            <p>Delai : {{ demande.delai|date('Y-m-d H:i:s') }}</p>
                            {% if demande.delai is not null %}
                                <!-- Obtenir la date et l'heure actuelles -->
                                {% set maintenant = date() %}

                                <!-- Calculer le temps restant jusqu'à la date de délai -->
                                {% set diff = demande.delai.timestamp - maintenant.timestamp %}
                                {% set jours = diff / 86400 %} {# 86400 secondes par jour #}
                                {% set heures = (diff % 86400) / 3600 %} {# 3600 secondes par heure #}
                                {% set minutes = ((diff % 86400) % 3600) / 60 %} {# 60 secondes par minute #}
                                {% set secondes = ((diff % 86400) % 3600) % 60 %}

                                Temps restant : {{ jours | round(0, 'floor') }} jours {{ heures | round(0, 'floor') }} heures {{ minutes | round(0, 'floor') }} minutes {{ secondes | round(0, 'floor') }} secondes
                            {% else %}
                                <p>Le délai n'est pas défini pour cette demande.</p>
                            {% endif %}
                            {% if demande.objectifPoints > 0 %}
                                {% set totalPointsDemande = demande.getNbpoints() %}
                                {% set pourcentageProgression = (totalPointsDemande / demande.objectifPoints) * 100 %}

                                <div class="progress progress-md portfolio-progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: {{ pourcentageProgression }}%" aria-valuenow="{{ pourcentageProgression }}" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            {% else %}
                                <p>L'objectif de points n'est pas défini pour cette demande.</p>
                            {% endif %}
                            <hr>

