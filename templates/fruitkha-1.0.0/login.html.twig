{% extends 'fruitkha-1.0.0/base.html.twig' %}

{% block body %}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="assets/css/style.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<style>
/* Style for login form container */
.forms {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.form-content {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.login-form {
    text-align: center;
}

.login-form .title {
    font-size: 24px;
    margin-bottom: 20px;
}

.login-form form {
    margin-top: 20px;
}

.login-form form label {
    display: block;
    margin-bottom: 8px;
}

.login-form form input[type="email"],
.login-form form input[type="password"],
.login-form form input[type="text"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.login-form form button[type="submit"] {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.login-form form button[type="submit"]:hover {
    background-color: #0056b3;
}

.error-message {
    color: #ff0000;
    margin-top: 10px;
}
</style>
<body>
     <div class="forms">
        <div class="form-content">
            <div class="login-form">
                <div class="title">Login</div>
                <form id="login-form" action="{{ path('app_login') }}" method="post" novalidate>
                    <label for="email">Adresse email</label>
                    <input type="email" id="email" name="_username" required>

                    <br><label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" required>

                    <br> <label for="code">Authentication Code</label>
                    <input type="text" id="code" name="code" required>
 {% if errorMessage %}
            <p class="error-message">{{ errorMessage }}</p>
        {% endif %}
                    <button type="submit">connexion</button>
                    <a href="{{ path('app_forgot_password') }}">Mot de passe oubli√©</a>
                
                </form>
                 <a href="{{ path('app_home') }}" class="button">Go to App Home</a>
            </div>
        </div>
    </div>

   
</body>

{% endblock %}
