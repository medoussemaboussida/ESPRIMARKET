<!-- Modal dialog for displaying error messages -->
<div id="error-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p id="error-message"></p>
    </div>
</div>

<!-- Your JavaScript code -->
<script>
    // Select the modal and the close button
    var modal = document.getElementById('error-modal');
    var closeButton = modal.querySelector('.close');

    // Add event listener to close button to hide the modal
    closeButton.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    // Submit login form via AJAX
    document.getElementById('login-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent default form submission
        var form = event.target;
        var formData = new FormData(form);

        // Send AJAX request
        fetch(form.action, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json()) // Parse JSON response
        .then(data => {
            // Check if the response contains an error
            if (data.error) {
                // Display error message in the modal
                var errorMessage = document.getElementById('error-message');
                errorMessage.textContent = data.error;
                modal.style.display = 'block';
            } else {
                // Check if the response contains a redirect URL
                if (data.redirectUrl) {
                    // Redirect to the appropriate page on successful login
                    window.location.href = data.redirectUrl;
                } else {
                    // Redirect to default page
                    window.location.href = '/';
                }
            }
        })
        .catch(error => {
            console.error('There was an error!', error);
        });
    });
</script>
