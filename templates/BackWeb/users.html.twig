{% block body %}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.iduser }}</td>
                <td>{{ user.nomuser }}</td>
                <td>{{ user.prenomuser }}</td>
                <td>{{ user.emailuser }}</td>
                <td>{{ user.isDisabled ? 'Disabled' : 'Active' }}</td>
                <td>
                    <button type="button" class="btn btn-primary update-user" data-toggle="modal" data-target="#updateUserModal" data-user-id="{{ user.iduser }}">Update</button>
                    <a href="{{ path('user_delete', {'id': user.iduser}) }}" class="btn btn-danger">Delete</a>
                    {% if user.isDisabled %}
                        <a href="{{ path('user_enable', {'id': user.iduser}) }}" class="btn btn-success">Enable</a>
                    {% else %}
                        <a href="{{ path('user_disable', {'id': user.iduser}) }}" class="btn btn-warning">Disable</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
