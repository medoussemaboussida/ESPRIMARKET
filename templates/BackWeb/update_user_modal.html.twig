{% extends 'base.html.twig' %}

{% block title %}Update User{% endblock %}

{% block body %}
<div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="updateUserModalLabel">Update User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="updateUserForm" action="{{ path('user_update', {'id': userToUpdate.iduser}) }}" method="post">
          <div class="form-group">
            <label for="nomuser">First Name</label>
            <input type="text" class="form-control" id="nomuser" name="nomuser" value="{{ userToUpdate.nomuser }}">
          </div>
          <div class="form-group">
            <label for="prenomuser">Last Name</label>
            <input type="text" class="form-control" id="prenomuser" name="prenomuser" value="{{ userToUpdate.prenomuser }}">
          </div>
          <div class="form-group">
            <label for="emailuser">Email</label>
            <input type="email" class="form-control" id="emailuser" name="emailuser" value="{{ userToUpdate.emailuser }}">
          </div>
          <input type="hidden" name="userId" value="{{ userToUpdate.iduser }}">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form="updateUserForm" class="btn btn-primary">Update</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
