    {% if form_errors(form.titrePublication)|length > 0 %}
        <span class="text-danger">{{ form_errors(form.titrePublication)|first }}</span>
    {% endif %}
    <span id="titreError" class="text-danger" style="display: none;">Veuillez entrer le titre de publication</span>
</div>

<script>
    function validateTitre(input) {
            var titreValue = input.value.trim();
            var titreError = document.getElementById('titreError');
            var modifierBtn = document.getElementById('modifierBtn');

            if (titreValue === '') {
                titreError.style.display = 'block';
                modifierBtn.disabled = true;
            } else {
                titreError.style.display = 'none';
                checkFormValidity();
            }
        }

    function validateDescription(input) {
            var descriptionValue = input.value.trim();
            var descriptionError = document.getElementById('descriptionError');
            var modifierBtn = document.getElementById('modifierBtn');

            if (descriptionValue === '') {
                descriptionError.style.display = 'block';
                modifierBtn.disabled = true;
            } else {
                descriptionError.style.display = 'none';
                checkFormValidity();
            }
        }
        function checkFormValidity() {
            var titreValue = document.getElementById('publication_titrePublication').value.trim();
            var descriptionValue = document.getElementById('publication_description').value.trim();
            var modifierBtn = document.getElementById('modifierBtn');

            if (titreValue !== '' && descriptionValue !== '') {
                modifierBtn.disabled = false;
            } else {
                modifierBtn.disabled = true;
            }
        }

    

    
</script>

                <div class="form-group">
    {{ form_label(form.description, 'Description de la Publication') }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la description de la publication', 'onkeyup': 'validateDescription(this)'}}) }}
    {% if form_errors(form.description)|length > 0 %}
