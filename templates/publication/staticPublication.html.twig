    <!-- Script pour créer le graphique -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var ctx = document.getElementById('barChart').getContext('2d');
            var barChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [{% for publication in publicationData %}'{{ publication.titrePublication | striptags }}',{% endfor %}],
                    datasets: [{
                        label: 'Nombre de Commentaires',
                        data: [{% for publication in publicationData %}{{ publication.commentairesCount }},{% endfor %}],
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        xAxes: [{
                            ticks: {
                                display: true,
                                autoSkip: false,
                                maxRotation: 90,
                                minRotation: 0
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero: true,
                                // Couleur du texte de l'axe des ordonnées en noir
